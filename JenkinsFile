pipeline {
  agent any

  triggers {
    cron('20 23 * * *')  // Runs daily at 1 AM, staggered start
  }

  tools {
    maven 'MAVEN_HOME'     // Jenkins tool config: Maven
    jdk 'JAVA_HOME'            // Jenkins tool config: JDK 21
  }

  environment {
    REPORT_DIR = 'test-output'
    REPORT_NAME = 'ExtentReport.html'
    PROFILE = 'smoke'
  }

  stages {
    stage('Checkout') {
        steps {
            git 'https://github.com/shashushashankk/Zood_Tech.git'
        }
    }

    stage('Build') {
        steps {
            bat 'mvn clean compile'
        }
    }

    stage('Test') {
        steps {
             bat 'mvn test -Psmoke'
        }
    }

    stage('Publish Extent Report') {
      steps {
        publishHTML([
          allowMissing: false,
          alwaysLinkToLastBuild: true,
          keepAll: true,
          reportDir: "${REPORT_DIR}",
          reportFiles: "${REPORT_NAME}",
          reportName: 'Test Execution Report'
        ])
      }
    }
  }

  post {
    always {
        junit '**/target/surefire-reports/*.xml'
    }
  }


//   post {
